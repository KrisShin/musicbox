{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "musicbox",
  "version": "1.0.0",
  "identifier": "com.kris.musicbox",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "musicbox",
        "width": 400,
        "height": 820
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 24,
      "versionCode": 100
    }
  }
}
