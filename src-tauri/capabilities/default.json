{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "http:default",
      "allow": [
        "https://www.gequhai.net/**",
        "https://www.gequbao.com/**",
        "https://*.kuwo.cn/**",
        "https://*.gitee.com/KrisShin/musicbox**"
      ]
    },
    "dialog:default",
    "fs:allow-write-file",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    }
  ]
}