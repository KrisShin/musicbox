{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "clipboard-manager:allow-write-text",
    "dialog:default",
    "fs:allow-write-file",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$HOME/Download/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$HOME/Download/**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        "https://**"
      ]
    },
    "os:default",
    "notification:default",
    "opener:default"
  ]
}